{
  "name": "refundguard",
  "private": true,
  "version": "0.1.0",
  "description": "RefundGuard - minimal Whop refund policy automation MVP",
  "engines": {
    "node": "20.x"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm --workspace client run dev\" \"npm --workspace server run dev\"",
    "build": "npm --workspace client run build",
    "preview": "npm --workspace client run preview",
    "lint": "npm --workspace client run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.53.1"
  }
}
