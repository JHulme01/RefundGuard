# Whop OAuth credentials
WHOP_CLIENT_ID=your_whop_client_id
WHOP_CLIENT_SECRET=your_whop_client_secret
WHOP_REDIRECT_URI=https://your-deployment-url.vercel.app/api/auth/callback

# Whop API access token (if using client credentials or manual token)
WHOP_API_TOKEN=your_whop_api_token

# Whop API base URL (defaults to production)
WHOP_API_BASE_URL=https://api.whop.com

# Webhook signature secret for validating Whop events
WHOP_WEBHOOK_SECRET=shared_webhook_secret

# Session secret for encrypting cookies
SESSION_SECRET=change_me_super_secret

# Frontend origin allowed for CORS (default allows all)
APP_ORIGIN=http://localhost:5173

# Optional: override local SQLite path (defaults to refundguard.db in project root)
DATABASE_PATH=./refundguard.db

# Optional: support email for outbound denial copy
SUPPORT_EMAIL=support@yourbrand.com

